<Window x:Class="sniffer.Content"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sniffer"
        mc:Ignorable="d"
        Title="Content" Height="450" Width="800">
    <Grid>
        <TextBlock FontSize="20" Margin="114,10,526,365">Content in UTF8:</TextBlock>
        <TextBlock Name="utf8" TextWrapping="Wrap" Text="{Binding ElementName=utf8}" VerticalAlignment="Top" Height="350" Margin="10,74,428,0"/>
        <TextBlock x:Name="hex" TextWrapping="Wrap" Text="{Binding ElementName=hex}" VerticalAlignment="Top" Height="350" Margin="428,74,10,0"/>
        <TextBlock FontSize="20" Margin="532,10,98,365">Content in hex:</TextBlock>
    </Grid>
</Window>
